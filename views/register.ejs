<h1>
  <%= title %>
  <link
    rel="stylesheet"
    href="https://unpkg.com/papercss@1.5.1/dist/paper.min.css"
  />
</h1>

<div class="row flex-center">
  <div class="sm-4 col">
    <div class="card" style="width: 20rem;">
      <div class="card-body">
        <form method="POST">
          <div class="form-group">
            <label for="username">Email</label>
            <input
              type="email"
              id="username"
              name="username"
              class="input-block"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Create Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="input-block"
              required
            />
          </div>
          <div class="form-group">
            <label for="password_confirm">Retype Password above</label>
            <input
              type="password"
              id="confirm"
              name="confirm"
              class="input-block"
              required
            />
          </div>
          <button type="submit" class="btn-secondary btn-block">
            Create my Account
          </button>
        </form>
      </div>
      <div class="card-footer">
        Already have an account?
        <a href="/login">Login</a>
      </div>
    </div>
  </div>
</div>
